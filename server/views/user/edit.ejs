<%- include ../partials/header.ejs %> <%- include ../partials/main_nav.ejs %>

<main>
  <div class="container d-flex flex-column align-items-center user">
    <h1>Edit User</h1>
    <div class="col-md-6">
      <h1><% title %></h1>
      <br/>
      <form class="form" method="POST">
        <div class="row">
          <div class="col-12 col-sm-6">
            <div class="form-group">
              <label for="usernameTextField"> User Name</label>
              <input
                type="text"
                class="form-control"
                id="usernameTextField"
                placeholder="Enter the user name"
                name="username"
                value="<%= user.username  %>"
                required
              />
            </div>
            
            <div class="form-group">
              <label for="nameTextField"> Contact Name (Display Name)</label>
              <input
                type="text"
                class="form-control"
                id="nameTextField"
                placeholder="Enter the contact name"
                name="displayName"
                value="<%= user.displayName  %>"
                required
              />
            </div>
            
            <div class="form-group">
              <label for="numberTextField"> Contact Number</label>
              <input
                type="text"
                class="form-control"
                id="numberTextField"
                placeholder="Enter the contact number"
                name="contactNumber"
                value="<%= user.contactNumber  %>"
                required
              />
            </div>
          </div>
          <div class="col-12 col-sm-6">
            <div class="form-group">
              <label for="emailTextField"> User Email</label>
              <input
                type="text"
                class="form-control"
                id="emailTextField"
                placeholder="Enter the user email"
                name="email"
                value="<%= user.email  %>"
                required
              />
            </div>
            <div class="form-group">
              <label for="newPasswordTextField"> New Password </label>
              <input
                type="newPassword"
                class="form-control"
                id="newPasswordTextField"
                placeholder="Enter the user new password"
                name="newPassword"
                value="<%= user.newPassword %>"
                required
              />
            </div>
            <div class="form-group">
              <label for="currentPasswordTextField"> Current Password </label>
              <input
                type="currentPassword"
                class="form-control"
                id="currentPasswordTextField"
                placeholder="Enter the user current password"
                name="currentPassword"
                value="<%= user.currentPassword %>"
                required
              />
            </div>
          </div>
        </div>

        <div class="d-flex justify-content-between" style="height: 200px;">
          <div>
            <button class="btn btn-primary" type="submit">
              <i class="fas fa-edit"></i>
              Submit
            </button>
            <a href="/user-list/" class="btn btn-warning">
              <i class="fas fa-undo"></i>
              Cancel
            </a>
          </div>
          <div>
            <a id="userCrud" href="/user-list/delete/<%= user._id %>" class="btn btn-danger btn-sm">
              <i class="fas fa-trash-alt pr-1"></i>
              Delete
            </a>
          </div>
        </div>
      </form>
    </div>
  </div>
</main>

<%- include ../partials/bottom_nav.ejs %> <%- include ../partials/footer.ejs %>
